<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - E-Shop</title>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  @RenderSection("Styles", required: false)
</head>
<body>
  <header>
    <div class="container topbar">
      <a href="#" class="brand" aria-label="Página inicial">
        <div class="logo" aria-hidden="true"></div>
        <span>StoreX</span>
      </a>

      <label class="search" for="q">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M21 21l-3.5-3.5" stroke="#334155" stroke-width="2" stroke-linecap="round"/><circle cx="11" cy="11" r="7" stroke="#334155" stroke-width="2"/></svg>
        <input id="q" type="search" placeholder="Buscar produtos, marcas e mais…"/>
      </label>

      <div class="actions">
        <button class="icon-btn" aria-label="Favoritos">
          <span class="badge" aria-hidden="true">3</span>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M12 21s-6.5-4-9-7.5C1 10.5 2.5 7 6 7c2.2 0 3.4 1.2 4 2 .6-.8 1.8-2 4-2 3.5 0 5 3.5 3 6.5C18.5 17 12 21 12 21z" stroke="#334155" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </button>
        <button class="icon-btn" aria-label="Carrinho">
          <span class="badge" aria-hidden="true">2</span>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M3 3h2l.4 2M7 13h9l3-7H6.4" stroke="#334155" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><circle cx="9" cy="20" r="1.5" fill="#334155"/><circle cx="17" cy="20" r="1.5" fill="#334155"/></svg>
        </button>
        <button class="icon-btn" aria-label="Entrar">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><circle cx="12" cy="8" r="4" stroke="#334155" stroke-width="2"/><path d="M4 21c1.7-3.3 5-5 8-5s6.3 1.7 8 5" stroke="#334155" stroke-width="2" stroke-linecap="round"/></svg>
        </button>
      </div>
    </div>

    <nav>
      <div class="container nav-row">
        <a class="nav-link" href="#">Novidades</a>
        <a class="nav-link" href="#">Masculino</a>
        <a class="nav-link" href="#">Feminino</a>
        <a class="nav-link" href="#">Casa</a>
        <a class="nav-link" href="#">Acessórios</a>
        <a class="nav-link" href="#">Eletrônicos</a>
        <a class="nav-link" href="#">Promoções</a>
      </div>
    </nav>
  </header>

  <main>
    @RenderBody()
  </main>

  <footer>
    <div class="container footer-grid">
      <div class="fcol">
        <div class="brand"><div class="logo"></div><span>StoreX</span></div>
        <p style="color:var(--muted); margin:10px 0 0; max-width: 46ch;">A sua loja de confiança para moda, tecnologia e casa, com curadoria e preços justos.</p>
      </div>
      <div class="fcol">
        <h5>Institucional</h5>
        <a href="#">Sobre</a>
        <a href="#">Carreiras</a>
        <a href="#">Blog</a>
      </div>
      <div class="fcol">
        <h5>Ajuda</h5>
        <a href="#">Entrega</a>
        <a href="#">Trocas e Devoluções</a>
        <a href="#">Central de Suporte</a>
      </div>
      <div class="fcol">
        <h5>Legal</h5>
        <a href="#">Termos de Uso</a>
        <a href="#">Privacidade</a>
        <a href="#">Cookies</a>
      </div>
    </div>
    <div class="container credits">© 2025 StoreX — Todos os direitos reservados.</div>
  </footer>

  <script>
    function toggleMenu() {
        document.getElementById("menu").classList.toggle("show");
    }
    // Ações simples de UI (apenas demonstração)
    document.querySelectorAll('.product .btn').forEach(btn => {
      btn.addEventListener('click', () => {
        if (btn.classList.contains('primary')) {
          alert('Indo para checkout…');
        } else {
          const cart = document.querySelector('.actions .icon-btn:nth-child(2) .badge');
          cart.textContent = String(Number(cart.textContent) + 1);
          btn.textContent = 'Adicionado ✓';
          setTimeout(() => btn.textContent = 'Adicionar', 1200);
        }
      });
    });
  </script>
  @RenderSection("Scripts", required: false)
</body>
</html>
